<!--pages/index/index.wxml-->
<view class='container'>
  <!-- 轮播图 -->
  <swiper class='swiper' indicator-dots indicator-color='ivory' indicator-active-color='#d43c33' autoplay
    interval='2000' circular>
    <swiper-item wx:for="{{bannerList}}" wx:key='bannerId'>
      <image src='{{item.pic}}'></image>
      <text>{{item.pic}}</text>
    </swiper-item>
  </swiper>

  <!-- 五个图标导航区域  -->
  <view class="navs">
    <view class="nav-item">
      <text class="iconfont icon-shouye"></text>
      <text>每日推荐</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-gedan"></text>
      <text>歌单</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-paihangbang"></text>
      <text>排行榜</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-zhibo"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲区域 -->
  <view class="recommend">
    <Navbar title='推荐歌曲' nav='为你精心推荐'></Navbar>
    <view>
      <scroll-view class="scrollviewcontainer" enable-flex scroll-x>
        <view class='scroll-item' wx:for="{{recommendSongList}}" wx:key='id'>
          <image src="{{item.picUrl}}"></image>
          <text>{{item.name}}</text>
        </view>
      </scroll-view>
    </view>
  </view>

  <!-- 排行榜区域 -->
  <view class='topList'>
    <Navbar title='排行榜' nav='热歌风向标'></Navbar>
    <swiper class="topListSwiper" circular>
      <swiper-item class='swiperTopList-item' wx:for="{{topList}}" wx:key='name'>
        <view class='title'>{{item.name}}</view>
        <view class='item' wx:for="{{item.musics}}" wx:key='id' wx:for-item='musicItem'>
          <image src='{{musicItem.al.picUrl}}'></image>
          <text class='count'>{{index+1}}</text>
          <text class='music'>{{musicItem.al.name}}</text>
        </view>
      </swiper-item>
    </swiper>



  </view>
</view>