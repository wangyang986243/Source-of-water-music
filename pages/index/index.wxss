/* pages/index/index.wxss */
.swiper{
  width: 100%;
  height: 360rpx;
}
.swiper image{
 width: 100%;
 height: 100%;
}

/* 五个图标导航区域 */
.navs{
  display: flex;
  justify-content: space-around;
}
.nav-item{
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
}
.nav-item text{
  font-size: 26rpx;
}
.nav-item .iconfont{
  margin: 20rpx 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  background: rgb(240,19,19);
  font-size: 48rpx;
  color:#fff
}

/* 推荐歌曲 */
.recommend{
  padding:20rpx;
}
.recommend   .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666666;
}
.recommend .header{
  height: 70rpx;
}
.recommend .header .more{
  float: right;
  padding:10rpx  20rpx;
  border:1px solid #333;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.scrollviewcontainer{
  display: flex;
  height: 300rpx;
}
.scrollviewcontainer .scroll-item{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollviewcontainer .scroll-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollviewcontainer .scroll-item text{
font-size: 26rpx;
/* 多行文本溢出 */
overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
