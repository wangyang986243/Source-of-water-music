/* pages/video/video.wxss */
/* 头部搜索 */
.container .head{
  display: flex;
  padding: 10rpx;
}
.container .head image{
  width: 60rpx;
  height:60rpx;
}
.container .head .search{
  flex: 1;
  margin:0 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color:#d43c33;
  border-bottom:1px solid #eee;
}

/* 标签区域 */
.labelScroll{
  width: 100%;
  height: 100rpx;
  display: flex;
  white-space: nowrap;
}
.labelScroll .scroll-item{
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.labelScroll .scroll-item .label{
  height: 60rpx;
  line-height: 60rpx;
}
.labelScroll .scroll-item .active{
  border-bottom:1px solid #d43c33;
  color:#d43c33
}

/* 视屏列表 */
.videoScroll .videoItem {
  padding: 0 3%;
}
.videoScroll .videoItem video{
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}
.videoScroll .videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}